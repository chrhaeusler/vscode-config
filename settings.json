{
    // TELEMETRY
    "telemetry.telemetryLevel": "off",
    "telemetry.feedback.enabled": false,

    // WINDOW
    "window.newWindowProfile": "Default",
    "window.customTitleBarVisibility": "auto",

    // WORKBENCH
    "workbench.preferredDarkColorTheme": "Visual Studio Dark",
    "workbench.iconTheme": "vscode-icons",
    "workbench.tree.indent": 12,
    "workbench.colorCustomizations": {
        "editor.background": "#111111"
    },

    // EDITOR
    // "editor.minimap.enabled": false,
    "editor.bracketPairColorization.enabled": true,
    "editor.cursorStyle": "block",
    "editor.cursorBlinking": "smooth",
    "editor.hover.enabled": false,
    "editor.dragAndDrop": false,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.showFoldingControls": "always",
    "editor.tabSize": 4,
    "editor.lineHeight": 1.5,
    "editor.lineNumbers": "on",
    "editor.wordWrap": "on" ,
    "editor.renderLineHighlight": "all",
    "editor.rulers": [80, 100, 120],
    "editor.renderWhitespace": "trailing",
    "files.autoSave": "afterDelay",
    "files.autoSaveDelay": 1000,
    "files.trimTrailingWhitespace": true,

    // TERMINAL
    "terminal.integrated.defaultProfile.linux": "bash",
    "terminal.integrated.fontSize": 14,

    // PYTHON VENV
    // The following breaks constantly, so rely on a super cool .bashrc
    "python.terminal.activateEnvInCurrentTerminal": true,
    "python.defaultInterpreterPath": "/bin/python3",

    // PYTHON-SPECIFIC EDITOR SETTINGS
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports.ruff": "always",
            "source.fixAll": "always"
        }
    },

    // PYLANCE for IntelliSense & type checking
    "python.languageServer": "Pylance",

    // RUFF for linting, fixing, import sorting
    "ruff.enable": true,
    "ruff.organizeImports": true,
    "ruff.path": [".venv/bin/ruff", "ruff"],

    // PYTEST
    "python.testing.pytestEnabled": true,
    "python.testing.autoTestDiscoverOnSaveEnabled": true,

    // GIT
    "git.decorations.enabled": true,
    "git.confirmSync": false,

    // YAML formatting (for RedHat extension)
    "[yaml]": {
        "editor.defaultFormatter": "redhat.vscode-yaml",
        "editor.formatOnSave": true
    },

    // JSON formatting (for Prettier)
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
}