{
    // TELEMETRY
    "telemetry.telemetryLevel": "off",
    "telemetry.feedback.enabled": false,
    // BASIC SETTINGS
    "window.newWindowProfile": "Default",
    "workbench.preferredDarkColorTheme": "Visual Studio Dark",
    "workbench.iconTheme": "vscode-icons",
    "workbench.colorCustomizations": {
        "editor.background": "#111111"
    },
    "window.customTitleBarVisibility": "auto",

    // GENERAL EDITOR SETTINGS
    "editor.lineNumbers": "on",
    "editor.tabSize": 4,
    "editor.wordWrap": "on" ,
    // "files.autoSave": "afterDelay",
    // "files.autoSaveDelay": 1000,
    "editor.formatOnSave": true,
    "editor.rulers": [88, 100, 120],
    "editor.renderLineHighlight": "all",
    "editor.bracketPairColorization.enabled": true,
    "editor.renderWhitespace": "trailing",

    // TERMINAL
    "terminal.integrated.shell.linux": "/bin/bash",
    "terminal.integrated.fontSize": 14,

    // Python virtual environment
    // The following breaks constantly, so  rely on the adjusted .bashrc
    //"python.terminal.activateEnvInCurrentTerminal": true,
    //"python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",

    // PYTHON-SPECIFIC SETTINGS
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.organizeImports.ruff": "always",
            "source.fixAll": "always"
        }
    },

    // Ruff for linting, fixing, import sorting
    "ruff.enable": true,
    "ruff.organizeImports": true,
    "ruff.lintOnSave": true,
    "ruff.path": [".venv/bin/ruff"],

    // Use Pylance for IntelliSense & type checking
    "python.languageServer": "Pylance",

    // PYTEST
    "python.testing.pytestEnabled": true,
    "python.testing.autoTestDiscoverOnSaveEnabled": true,

    // GIT
    "git.decorations.enabled": true,
    "git.confirmSync": false,

    // YAML Formatting (for RedHat extension)
    "[yaml]": {
        "editor.defaultFormatter": "redhat.vscode-yaml",
        "editor.formatOnSave": true
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    }
}