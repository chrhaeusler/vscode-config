// Place your key bindings in this file to override the defaults
[
    // insert an ipdb breakpoint
    // "import ipdb; ipdb.set_trace()  # BREAKPOINT"
    {
        "key": "alt+b",
        "command": "type",
        "args": {
            "text": "import ipdb; ipdb.set_trace()  # noqa"
        },
        "when": "editorTextFocus"
    }
]